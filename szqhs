    <script>
        // 核心变量
        const ADMIN_PASSWORD = "15037326810Szq";
        const ACCESS_PASSWORD = "15037326810"; // 访问密码就是您的手机号
        let cart = [];
        let orders = [];
        
        // 页面加载
        document.addEventListener('DOMContentLoaded', function() {
            // 阻止F12和右键菜单（简单保护）
            document.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                return false;
            });
            
            document.addEventListener('keydown', function(e) {
                // 阻止F12
                if (e.key === 'F12') {
                    e.preventDefault();
                    return false;
                }
                // 阻止Ctrl+Shift+I
                if (e.ctrlKey && e.shiftKey && e.key === 'I') {
                    e.preventDefault();
                    return false;
                }
                // 阻止Ctrl+U
                if (e.ctrlKey && e.key === 'u') {
                    e.preventDefault();
                    return false;
                }
            });
            
            // 密码提交
            const passwordInput = document.getElementById('access-password');
            document.getElementById('submit-password').addEventListener('click', verifyAccess);
            
            passwordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    verifyAccess();
                }
            });
            
            // 从本地存储加载数据
            loadFromStorage();
            
            // 初始化购物车徽章
            updateCartBadge();
            
            // 设置导航切换
            setupNavigation();
            
            // 购物车徽章点击
            document.getElementById('cart-badge').addEventListener('click', function() {
                switchSection('cart');
            });
            
            // 加入购物车按钮事件委托
            document.addEventListener('click', handleClickEvents);
            
            // 密码验证
            document.getElementById('verify-password').addEventListener('click', verifyPassword);
            
            // 保存价格
            document.getElementById('save-prices').addEventListener('click', savePrices);
            
            // 提交订单
            document.getElementById('checkout-btn').addEventListener('click', checkout);
            
            // 订单管理相关
            document.getElementById('refresh-orders').addEventListener('click', loadOrders);
            document.getElementById('export-orders').addEventListener('click', exportOrders);
            document.getElementById('filter-status').addEventListener('change', loadOrders);
            document.getElementById('filter-grade').addEventListener('change', loadOrders);
            document.getElementById('search-order').addEventListener('input', loadOrders);
            
            // 数据管理
            document.getElementById('clear-orders').addEventListener('click', clearOrders);
            document.getElementById('clear-cart').addEventListener('click', clearCart);
            
            // 打印功能
            document.getElementById('do-print').addEventListener('click', doPrint);
            document.getElementById('cancel-print').addEventListener('click', cancelPrint);
            
            // 设置默认交货时间
            setDefaultDeliveryTime();
            
            // 初始更新购物车显示
            updateCartDisplay();
        });
        
        // 验证访问密码 - 修复版
        function verifyAccess() {
            const passwordInput = document.getElementById('access-password');
            const errorElement = document.getElementById('password-error');
            const enteredPassword = passwordInput.value;
            
            if (enteredPassword === ACCESS_PASSWORD) {
                // 密码正确，隐藏保护层
                document.getElementById('password-protection').style.display = 'none';
                // 加载订单列表
                loadOrders();
                showNotification('欢迎进入鲸落工会系统', 'success');
            } else {
                // 密码错误
                errorElement.textContent = '密码错误，请重试（提示：密码是15037326810）';
                passwordInput.value = '';
                passwordInput.focus();
            }
        }
        
        // 加载数据
        function loadFromStorage() {
            const savedCart = localStorage.getItem('whale_cart');
            const savedOrders = localStorage.getItem('whale_orders');
            
            if (savedCart) cart = JSON.parse(savedCart);
            if (savedOrders) orders = JSON.parse(savedOrders);
        }
        
        // 保存数据
        function saveToStorage() {
            localStorage.setItem('whale_cart', JSON.stringify(cart));
            localStorage.setItem('whale_orders', JSON.stringify(orders));
        }
        
        // 设置导航
        function setupNavigation() {
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                    const sectionId = this.getAttribute('data-section');
                    document.getElementById(sectionId).classList.add('active');
                    
                    if (sectionId === 'cart') updateCartDisplay();
                    if (sectionId === 'orders') loadOrders();
                });
            });
        }
        
        // 切换页面
        function switchSection(sectionId) {
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            
            document.querySelector(`.nav-btn[data-section="${sectionId}"]`).classList.add('active');
            document.getElementById(sectionId).classList.add('active');
            
            if (sectionId === 'cart') updateCartDisplay();
            if (sectionId === 'orders') loadOrders();
        }
        
        // 事件处理
        function handleClickEvents(e) {
            // 加入购物车
            if (e.target.classList.contains('add-to-cart-btn')) {
                const product = e.target.getAttribute('data-product');
                const price = parseFloat(e.target.getAttribute('data-price'));
                addToCart(product, price);
                return;
            }
            
            // 购物车内按钮
            if (e.target.classList.contains('cart-btn')) {
                const index = parseInt(e.target.getAttribute('data-index'));
                const action = e.target.getAttribute('data-action');
                
                if (action === 'increase') {
                    cart[index].quantity += 1;
                } else if (action === 'decrease') {
                    cart[index].quantity -= 1;
                    if (cart[index].quantity <= 0) cart.splice(index, 1);
                } else if (action === 'remove') {
                    cart.splice(index, 1);
                    showNotification('商品已移除', 'success');
                }
                
                saveCart();
                updateCartDisplay();
                updateCartBadge();
                return;
            }
            
            // 订单操作按钮
            if (e.target.classList.contains('order-action-btn')) {
                const orderId = e.target.getAttribute('data-order-id');
                const action = e.target.getAttribute('data-action');
                handleOrderAction(orderId, action);
                return;
            }
        }
        
        // 核心功能函数
        function addToCart(product, price) {
            const existing = cart.find(item => item.product === product);
            
            if (existing) {
                existing.quantity += 1;
            } else {
                cart.push({
                    product: product,
                    price: price,
                    quantity: 1
                });
            }
            
            saveCart();
            updateCartDisplay();
            updateCartBadge();
            showNotification(`${product} 已加入购物车`, 'success');
        }
        
        function updateCartDisplay() {
            const container = document.getElementById('cart-items');
            const totalElement = document.getElementById('cart-total');
            const orderForm = document.getElementById('order-form');
            
            container.innerHTML = '';
            
            if (cart.length === 0) {
                container.innerHTML = '<p id="empty-cart-message" style="text-align: center; padding: 2rem; color: #666;"><i class="fas fa-shopping-cart" style="font-size: 2rem; margin-bottom: 1rem; display: block; color: #ccc;"></i>您的购物车是空的</p>';
                orderForm.style.display = 'none';
                totalElement.textContent = '0';
                return;
            }
            
            orderForm.style.display = 'block';
            
            let total = 0;
            
            cart.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const itemElement = document.createElement('div');
                itemElement.className = 'cart-item';
                itemElement.innerHTML = `
                    <div>
                        <div style="font-weight: 600; margin-bottom: 5px;">${item.product}</div>
                        <div style="color: #666; font-size: 0.9rem;">¥${item.price} × ${item.quantity}</div>
                    </div>
                    <div>
                        <div style="font-weight: 600; color: #1a5276; margin-bottom: 10px;">¥${itemTotal.toFixed(2)}</div>
                        <div style="display: flex; gap: 5px;">
                            <button class="cart-btn" data-index="${index}" data-action="decrease" style="padding: 5px 10px; border: none; background: #eee; border-radius: 3px; cursor: pointer;">-</button>
                            <button class="cart-btn" data-index="${index}" data-action="increase" style="padding: 5px 10px; border: none; background: #eee; border-radius: 3px; cursor: pointer;">+</button>
                            <button class="cart-btn" data-index="${index}" data-action="remove" style="padding: 5px 10px; border: none; background: #ffebee; color: #e74c3c; border-radius: 3px; cursor: pointer;">删除</button>
                        </div>
                    </div>
                `;
                
                container.appendChild(itemElement);
            });
            
            totalElement.textContent = total.toFixed(2);
        }
        
        function updateCartBadge() {
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            document.getElementById('cart-count').textContent = totalItems;
        }
        
        function saveCart() {
            localStorage.setItem('whale_cart', JSON.stringify(cart));
        }
        
        function verifyPassword() {
            const password = document.getElementById('admin-password').value;
            if (password === ADMIN_PASSWORD) {
                document.getElementById('price-controls').style.display = 'block';
                showNotification('验证成功', 'success');
            } else {
                showNotification('密码错误', 'error');
            }
        }
        
        function savePrices() {
            document.getElementById('campus-price').textContent = document.getElementById('edit-campus-price').value;
            document.getElementById('high-price').textContent = document.getElementById('edit-high-price').value;
            document.getElementById('medium-price').textContent = document.getElementById('edit-medium-price').value;
            document.getElementById('low-price').textContent = document.getElementById('edit-low-price').value;
            
            document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                const product = btn.getAttribute('data-product');
                if (product === '校园卡') btn.setAttribute('data-price', document.getElementById('edit-campus-price').value);
                if (product === '高级作业') btn.setAttribute('data-price', document.getElementById('edit-high-price').value);
                if (product === '中级作业') btn.setAttribute('data-price', document.getElementById('edit-medium-price').value);
                if (product === '低级作业') btn.setAttribute('data-price', document.getElementById('edit-low-price').value);
            });
            
            showNotification('价格已更新', 'success');
        }
        
        // 提交订单并弹出打印提示
        function checkout() {
            if (cart.length === 0) {
                showNotification('购物车为空', 'error');
                return;
            }
            
            const name = document.getElementById('customer-name').value.trim();
            const grade = document.getElementById('customer-grade').value;
            const className = document.getElementById('customer-class').value.trim();
            const deliveryTime = document.getElementById('delivery-time').value;
            const phone = document.getElementById('customer-phone').value.trim();
            const note = document.getElementById('customer-note').value.trim();
            
            if (!name || !grade || !className || !deliveryTime) {
                showNotification('请填写完整信息', 'error');
                return;
            }
            
            // 生成订单
            const orderId = 'JL' + Date.now().toString().slice(-6);
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            const order = {
                id: orderId,
                date: new Date().toLocaleString('zh-CN'),
                customer: { 
                    name, 
                    grade, 
                    className,
                    phone,
                    note
                },
                deliveryTime: new Date(deliveryTime).toLocaleString('zh-CN'),
                items: [...cart],
                total: total,
                status: '待处理'
            };
            
            // 添加到订单列表
            orders.unshift(order);
            saveToStorage();
            
            // 清空购物车
            cart = [];
            saveCart();
            updateCartDisplay();
            updateCartBadge();
            
            // 清空表单
            document.getElementById('customer-name').value = '';
            document.getElementById('customer-grade').value = '';
            document.getElementById('customer-class').value = '';
            document.getElementById('customer-phone').value = '';
            document.getElementById('customer-note').value = '';
            
            // 显示打印订单界面
            showPrintOrder(order);
        }
        
        // 显示打印订单界面
        function showPrintOrder(order) {
            // 填充打印内容
            document.getElementById('print-time').textContent = order.date;
            document.getElementById('print-order-id').textContent = order.id;
            document.getElementById('print-customer').textContent = `${order.customer.name} (${order.customer.grade}${order.customer.class})`;
            document.getElementById('print-phone').textContent = order.customer.phone || '未提供';
            document.getElementById('print-delivery').textContent = order.deliveryTime;
            document.getElementById('print-note').textContent = order.customer.note || '无';
            document.getElementById('print-total').textContent = `¥${order.total.toFixed(2)}`;
            
            // 填充订单商品
            const printItems = document.getElementById('print-items');
            printItems.innerHTML = '';
            
            order.items.forEach(item => {
                const itemElement = document.createElement('div');
                itemElement.className = 'print-item';
                itemElement.innerHTML = `
                    <span>${item.product} × ${item.quantity}</span>
                    <span>¥${(item.price * item.quantity).toFixed(2)}</span>
                `;
                printItems.appendChild(itemElement);
            });
            
            // 显示打印界面
            document.getElementById('print-order').style.display = 'block';
            showNotification('订单提交成功！请打印订单凭证', 'success');
        }
        
        // 执行打印
        function doPrint() {
            window.print();
        }
        
        // 取消打印
        function cancelPrint() {
            document.getElementById('print-order').style.display = 'none';
            // 切换到订单管理页面
            switchSection('orders');
        }
        
        function loadOrders() {
            const container = document.getElementById('orders-list');
            const filterStatus = document.getElementById('filter-status').value;
            const filterGrade = document.getElementById('filter-grade').value;
            const searchText = document.getElementById('search-order').value.toLowerCase();
            
            container.innerHTML = '';
            
            let filteredOrders = orders;
            
            // 应用筛选
            if (filterStatus) {
                filteredOrders = filteredOrders.filter(order => order.status === filterStatus);
            }
            
            if (filterGrade) {
                filteredOrders = filteredOrders.filter(order => order.customer.grade === filterGrade);
            }
            
            if (searchText) {
                filteredOrders = filteredOrders.filter(order => 
                    order.id.toLowerCase().includes(searchText) ||
                    order.customer.name.toLowerCase().includes(searchText)
                );
            }
            
            if (filteredOrders.length === 0) {
                container.innerHTML = '<p id="no-orders-message" style="text-align: center; padding: 3rem; color: #666;"><i class="fas fa-clipboard-list" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: #ccc;"></i>暂无订单数据</p>';
                return;
            }
            
            filteredOrders.forEach(order => {
                const orderCard = document.createElement('div');
                orderCard.className = 'order-card';
                
                const itemsList = order.items.map(item => 
                    `<div class="order-item">
                        <span>${item.product} × ${item.quantity}</span>
                        <span>¥${(item.price * item.quantity).toFixed(2)}</span>
                    </div>`
                ).join('');
                
                const statusClass = {
                    '待处理': 'status-pending',
                    '处理中': 'status-processing',
                    '已完成': 'status-completed'
                }[order.status] || 'status-pending';
                
                orderCard.innerHTML = `
                    <div class="order-header">
                        <div>
                            <span class="order-id">${order.id}</span>
                            <span class="order-status ${statusClass}" style="margin-left: 10px;">${order.status}</span>
                        </div>
                        <div style="color: #666; font-size: 0.9rem;">${order.date}</div>
                    </div>
                    
                    <div class="order-info">
                        <div><strong>客户:</strong> ${order.customer.name} (${order.customer.grade}${order.customer.class})</div>
                        <div><strong>电话:</strong> ${order.customer.phone || '未提供'}</div>
                        <div><strong>交货时间:</strong> ${order.deliveryTime}</div>
                        <div><strong>备注:</strong> ${order.customer.note || '无'}</div>
                    </div>
                    
                    <div class="order-items">
                        <div style="font-weight: 600; color: #1a5276; margin-bottom: 10px;">订单详情:</div>
                        ${itemsList}
                        <div class="order-item" style="font-weight: bold; border-top: 2px solid #1a5276; margin-top: 10px; padding-top: 10px;">
                            <span>总计</span>
                            <span>¥${order.total.toFixed(2)}</span>
                        </div>
                    </div>
                    
                    <div class="order-actions">
                        <button class="btn order-action-btn" data-order-id="${order.id}" data-action="process" ${order.status !== '待处理' ? 'disabled style="opacity: 0.5;"' : ''}>
                            <i class="fas fa-play"></i> 开始处理
                        </button>
                        <button class="btn order-action-btn" data-order-id="${order.id}" data-action="complete" ${order.status !== '处理中' ? 'disabled style="opacity: 0.5;"' : ''}>
                            <i class="fas fa-check"></i> 完成订单
                        </button>
                        <button class="btn order-action-btn" data-order-id="${order.id}" data-action="delete" style="background: #e74c3c;">
                            <i class="fas fa-trash"></i> 删除订单
                        </button>
                    </div>
                `;
                
                container.appendChild(orderCard);
            });
        }
        
        function handleOrderAction(orderId, action) {
            const orderIndex = orders.findIndex(order => order.id === orderId);
            if (orderIndex === -1) return;
            
            switch(action) {
                case 'process':
                    orders[orderIndex].status = '处理中';
                    showNotification('订单已开始处理', 'info');
                    break;
                case 'complete':
                    orders[orderIndex].status = '已完成';
                    showNotification('订单已完成', 'success');
                    break;
                case 'delete':
                    if (confirm('确定删除此订单吗？')) {
                        orders.splice(orderIndex, 1);
                        showNotification('订单已删除', 'success');
                    }
                    break;
            }
            
            saveToStorage();
            loadOrders();
        }
        
        function exportOrders() {
            if (orders.length === 0) {
                showNotification('没有订单数据可导出', 'error');
                return;
            }
            
            let csvContent = "订单号,下单时间,客户姓名,年级,班级,电话,交货时间,订单总额,状态,备注\n";
            
            orders.forEach(order => {
                const row = [
                    order.id,
                    order.date,
                    order.customer.name,
                    order.customer.grade,
                    order.customer.className,
                    order.customer.phone || '',
                    order.deliveryTime,
                    order.total,
                    order.status,
                    order.customer.note || ''
                ].map(item => `"${item}"`).join(',');
                
                csvContent += row + "\n";
            });
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.setAttribute('href', url);
            link.setAttribute('download', `鲸落工会订单_${new Date().toLocaleDateString('zh-CN')}.csv`);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showNotification('订单数据已导出', 'success');
        }
        
        function clearOrders() {
            if (orders.length === 0) {
                showNotification('没有订单数据可清空', 'error');
                return;
            }
            
            if (confirm('确定要清空所有订单数据吗？此操作不可恢复！')) {
                orders = [];
                saveToStorage();
                loadOrders();
                showNotification('订单数据已清空', 'success');
            }
        }
        
        function clearCart() {
            if (cart.length === 0) {
                showNotification('购物车已是空的', 'error');
                return;
            }
            
            if (confirm('确定要清空购物车吗？')) {
                cart = [];
                saveCart();
                updateCartDisplay();
                updateCartBadge();
                showNotification('购物车已清空', 'success');
            }
        }
        
        function setDefaultDeliveryTime() {
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            document.getElementById('delivery-time').value = tomorrow.toISOString().slice(0, 16);
        }
        
        function showNotification(message, type) {
            const old = document.querySelector('.notification');
            if (old) old.remove();
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 3000);
        }
    </script>
</body>
</html>

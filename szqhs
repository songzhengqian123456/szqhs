        <!-- 系统管理部分 -->
        <section id="management" class="section">
            <h2 class="section-title">
                <i class="fas fa-cog"></i> 系统管理
            </h2>
            
            <div style="background: #f8f9fa; padding: 1.5rem; border-radius: var(--border-radius);">
                <div class="form-group">
                    <label>管理员密码</label>
                    <div style="display: flex; gap: 1rem;">
                        <input type="password" id="admin-password" placeholder="输入管理员密码" style="flex: 1;">
                        <button class="btn" id="verify-password">
                            <i class="fas fa-key"></i> 验证
                        </button>
                    </div>
                </div>
                
                <div id="price-controls" style="display: none; margin-top: 2rem;">
                    <h3 style="color: #1a5276; margin-bottom: 1rem;">价格管理</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
